{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! If we have a tag cover, display that - else blog cover - else nothing }}
<header class="main-header faded tag-head {{#if tag.image}}faded-soft" style="background-image: url({{tag.image}}){{else}}{{#if @blog.cover}}faded-soft" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}{{/if}}">
    <nav class="main-nav overlay clearfix">
        <a class="back-button icon-arrow-left" href="{{@blog.url}}">Home</a>
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title"><a href="/tag/{{tag.slug}}">#{{tag.name}}</a></h1>
            <h2 class="page-description">
                {{#if tag.description}}
                    {{tag.description}}<br/>
                {{/if}}
                {{pagination.total}} posts in collection
            </h2>
        </div>
    </div>
</header>

{{! The main content area on the homepage }}
<main class="content" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

    <div class="adv-block-h">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- tags_end -->
        <ins class="adsbygoogle"
             style="display:block"
             data-ad-client="ca-pub-3246871852696394"
             data-ad-slot="4940436662"
             data-ad-format="auto"></ins>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>
</main>
